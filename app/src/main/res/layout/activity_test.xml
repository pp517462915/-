<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/getNewsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET NEWS"/>

    <Button
        android:id="@+id/insertNewsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert News"/>

    <Button
        android:id="@+id/queryNewsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query News" />

    <Button
        android:id="@+id/insertInternetNewsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Internet News" />

</LinearLayout>